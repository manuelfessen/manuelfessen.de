---
import BaseHead from '@/components/BaseHead.astro'
import Nav from '@/components/Nav.astro'
import Footer from '@/components/Footer/Footer.astro'
import type { BaseHeadProps } from '@/components/BaseHead.astro'

import type { SiteMeta } from "@/types/index";
import siteMeta from "@/types/site-meta.config";

export type BaseHeadProps = {
  meta: SiteMeta;
};

const { title, description, image } = Astro.props as BaseHeadProps
---

<html lang='en' class='scroll-smooth font-serif antialiased'>
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body
    class='flex h-screen flex-col px-6 overflow-x-hidden [overflow:overlay] bg-gray-100 text-black dark:bg-gray-900 dark:text-white transition-[background-color] duration-300 selection:bg-[#67769660] items-center md:px-8 motion-safe:scroll-smooth pt-4'
  >
    <Nav />
    <main class='max-w-2xl mx-auto w-full'>
      <slot />
    </main>
      <Footer />
  </body>
</html>

<script>// This is the number of snowflakes to create
  const NUM_SNOWFLAKES = 50;
  
  // This is the size of the snowflakes
  const SNOWFLAKE_SIZE = "1.5em";
  
  // This is the style for the snowflake when it is falling
  const SNOWFLAKE_FALLING_STYLE =
    "falling 10s linear infinite";
  
  // This function creates a snowflake element and adds it to the page
  function createSnowflake() {
    const snowflake = document.createElement("i");
    snowflake.className = "snowflake fas fa-snowflake";
    snowflake.style.fontSize = SNOWFLAKE_SIZE;
    snowflake.style.top = `${Math.random() * 100}%`;
    snowflake.style.left = `${Math.random() * 100}%`;
    snowflake.style.animation = SNOWFLAKE_FALLING_STYLE;
    document.body.appendChild(snowflake);
  }
  
  // This function creates all the snowflakes and adds them to the page
  function createSnow() {
    for (let i = 0; i < NUM_SNOWFLAKES; i++) {
      createSnowflake();
    }
  }
  
  // Call the createSnow() function to start the snowfall
  createSnow();
  </script>
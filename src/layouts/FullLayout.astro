---
import BaseHead from '@/components/BaseHead.astro'
import Sidebar from '@/components/Sidebar-hotfix.astro'
import type { SiteMeta } from '@/types/index'
import { Image } from 'astro:assets';
import avatar from 'public/sw.webp'

export type BaseHeadProps = {
  meta: SiteMeta
}

const { title, description, image } = Astro.props as BaseHeadProps
---

<html lang='en' class='font-serif antialiased'>
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body
    class='relative flex h-full min-h-screen w-full bg-white dark:bg-black text-gray-900 dark:text-gray-100 overscroll-none'
  >
    <Sidebar />
    <main class='flex flex-1'>
      <div class='flex w-full'>
        <div
          class='relative flex max-h-screen w-full overflow-y-auto bg-white dark:bg-black text-gray-900 dark:text-gray-100'
        >
          <slot />
        </div>
      </div>
    </main>
  </body>
</html>
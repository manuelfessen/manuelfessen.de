---
import BaseHead from '@/components/BaseHead.astro'
import Nav from '@/components/Nav.astro'

import type { SiteMeta } from '@/types/index'
import { Image } from '@astrojs/image/components'
import avatar from 'public/sw.webp'

export type BaseHeadProps = {
  meta: SiteMeta
}

const { title, description, image } = Astro.props as BaseHeadProps
---

<html lang='en' class='scroll-smooth font-serif antialiased'>
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body
    class='flex h-screen flex-col px-4 overflow-x-hidden [overflow:overlay] bg-gray-100 text-black dark:bg-gray-900 dark:text-white selection:bg-[#67769660] items-center md:px-8 motion-safe:scroll-smooth pt-4'
  >
    <section class='text-sm lg:w-64 lg:fixed'>
      <section>
        <div class='relative mb-8 sm:mb-0 ml-8 flex-none'>
          <Image
            src={avatar}
            alt='Manuel Fessen'
            class='inline object-cover w-20 sm:w-32 h-20 sm:h-32 mr-2 rounded-full'
            draggable={false}
            loading='eager'
            format='webp'
          />
        </div>
        <h1 class='text-2xl font-bold mt-3 mb-1.5'>Manuel Fessen</h1>
        <p>UX Designer at EASY Software</p>

        <footer class='mx-auto my-6 lg:m-0 lg:w-64 lg:fixed lg:float-left lg:bottom-6'>
          <p><small>Built with ❤️ using Astro and Tailwind</small></p>
          <p><small>© 2022 Austin Liu</small></p>
        </footer>
      </section>
    </section>
    <main class='w-full flex-none relative mt-10 lg:block lg:m-auto lg:mt-10 justify-center'>
      <div class='justify-center'>
        <div class='lg:w-[32rem] lg:float-right lg:mb-6'>
          <slot />
        </div>
      </div>
    </main>
  </body>
</html>

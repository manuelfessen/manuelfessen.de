---
import { SEO } from 'config'
import { Image } from '@astrojs/image/components'
import BaseLayout from '@/layouts/BaseLayout.astro'
import PhotoPreview from '@/components/PhotoPreview.astro'
import type { SiteMeta } from '@/types'

const images = await Astro.glob('/public/images/photography/*.*')
const { href, title, description } = Astro.props

const metadata: SiteMeta = {
  title: SEO.title,
  description: 'Manuel Fessen - UX Professional',
}
---

<BaseLayout {...metadata}>
  <div class='mb-4'>
    <h2 class='mb-4 text-3xl font-bold tracking-tight md:text-5xl'>Notes</h2>
    <p class='text-gray-600 dark:text-gray-300'>
      Welcome to my digital garden 👨🏻‍🌾 — a personal wiki. A collection of essays, notes, and
      half-baked explorations I'm always tending to. Read more about <a
        href='https://maggieappleton.com/garden-history'
        target='_blank'>A Brief History & Ethos of the Digital Garden</a
      >.
    </p>
  </div>
</BaseLayout>

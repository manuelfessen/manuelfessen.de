---
import Layout from '~/layouts/PageLayout.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Speedtracker App',
  description: 'Speedtracker - Der präzise Speedtracker für ambitionierte Fahrer',
  ignoreTitleTemplate: true,
};

---

<Layout metadata={metadata}>
  <!-- Hero2 Widget für Speedtracker App -->
  <Hero2
    tagline="Tracke. Analysiere. Verbessere."
    actions={[]}
  >
    <Fragment slot="title">
      Speedtracker - Dein präziser Speedtracker
    </Fragment>
    <Fragment slot="subtitle">
      Echtzeit-Geschwindigkeitsüberwachung und Streckenaufzeichnung für anspruchsvolle Fahrer.
    </Fragment>
    <Fragment slot="content">
      <a href="https://apps.apple.com/de/app/speedtracker/id6740039121" target="_blank" class="block w-[200px] ml-0 lg:ml-0">
        <Fragment set:html={`
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 209.327 60" width="100%" height="auto">
            <image href="/appstore-download.svg" width="100%" height="100%" />
          </svg>
        `} />
      </a>
      <div class="mt-4 ml-0 lg:ml-0 text-sm">
        <a href="/kurz/privacy" class="mr-4 text-gray-600 hover:text-gray-900">Datenschutzerklärung</a>
      </div>
    </Fragment>
  </Hero2>

  <!-- Features2 Widget für Speedtracker App Funktionen -->
  <Features2
    title="Was macht Speedtracker einzigartig?"
    columns={3}
    items={[
      {
        "title": "Präzise Geschwindigkeitsmessung", 
        "description": "Erhalte genaue Echtzeit-Daten zu deiner aktuellen, maximalen und durchschnittlichen Geschwindigkeit.",
        "icon": "tabler:speedboat"
      },
      {
        "title": "Detaillierte Streckenaufzeichnung", 
        "description": "Verfolge deine Route mit farblicher Hervorhebung von Geschwindigkeitsbereichen auf interaktiven Karten.",
        "icon": "tabler:map-2"
      },
      {
        "title": "Umfangreiche Fahrtanalyse", 
        "description": "Analysiere deine Fahrten mit detaillierten Statistiken und exportiere deine Daten im CSV- oder GPX-Format.",
        "icon": "tabler:chart-line"
      }
    ]}
  />
</Layout>

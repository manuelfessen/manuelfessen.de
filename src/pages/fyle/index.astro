---
import Layout from '~/layouts/PageLayout.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Fyle App',
  description: 'Fyle - Dein digitales Dokumentenmanagement für Digital Natives',
  ignoreTitleTemplate: true,
};

---

<Layout metadata={metadata}>
  <!-- Hero2 Widget für Fyle App -->
  <Hero2
    tagline="Scannen, analysieren, organisieren, wiederfinden."
    actions={[]}
  >
    <Fragment slot="title">
      Deine Dokumente. Deine Kontrolle. Fyle. 
    </Fragment>
    <Fragment slot="subtitle">
      Die KI erledigt den Rest.
    </Fragment>
    <Fragment slot="content">
      <a href="https://apps.apple.com/de/app/fyle/id6740039121" target="_blank" class="block w-[200px] ml-0 lg:ml-0">
        <Fragment set:html={`
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 209.327 60" width="100%" height="auto">
            <image href="/appstore-download.svg" width="100%" height="100%" />
          </svg>
        `} />
      </a>
      <div class="mt-4 ml-0 lg:ml-0 text-sm">
        <a href="/fyle/eula" class="mr-4 text-gray-600 hover:text-gray-900">Allgemeine Geschäftsbedingungen</a>
        <a href="/fyle/privacy" class="mr-4 text-gray-600 hover:text-gray-900">Datenschutzerklärung</a>
      </div>
    </Fragment>
  </Hero2>

  <!-- Features2 Widget für Fyle App Funktionen -->
  <Features2
    title="Was macht Fyle einzigartig?"
    columns={3}
    items={[
      {
        "title": "Schnelles Scannen", 
        "description": "Erfasse Rechnungen, Verträge und Quittungen in Sekunden mit OCR-Technologie.",
        "icon": "tabler:camera"
      },
      {
        "title": "Intelligente Organisation", 
        "description": "Kategorisiere und markiere Dokumente automatisch für schnelles Wiederfinden.",
        "icon": "tabler:folder"
      },
      {
        "title": "Sichere Ablage", 
        "description": "Verschlüsselte Cloud-Speicherung und Backup deiner wichtigsten Unterlagen.",
        "icon": "tabler:lock"
      }
    ]}
  />
</Layout>

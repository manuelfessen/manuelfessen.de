---
import type { Frontmatter } from '@/types'

const { slug, title, description } = Astro.props as Frontmatter
---
<section class='grid items-start grid-cols-1 gap-6 md:grid-cols-12'>
  <h4
    class='col-span-2 pt-8 text-lg font-extrabold text-black dark:text-white md:pt-0 md:text-right md:text-base md:font-normal md:text-opacity-40'
  >
    Online
  </h4><div class='col-span-10'>
    <div class='flex flex-col space-y-3'>
      <a
        target='_blank'
        rel='noopener noreferrer'
        href='/twitter'
        class='flex items-center space-x-4 group'
        ><strong
          class='flex-none font-medium text-gray-1000 group-hover:text-blue-600 group-hover:underline dark:text-gray-100 dark:group-hover:text-blue-500'
          >Twitter</strong
        ><span
          class='w-full border-t border-gray-300 border-dashed shrink dark:border-gray-800'
        ></span><span class='flex-none text-tertiary'>Follow</span>
      </a><a
        target='_blank'
        rel='noopener noreferrer'
        href='/youtube'
        class='flex items-center space-x-4 group'
        ><strong
          class='flex-none font-medium text-gray-1000 group-hover:text-blue-600 group-hover:underline dark:text-gray-100 dark:group-hover:text-blue-500'
          >YouTube</strong
        ><span
          class='w-full border-t border-gray-300 border-dashed shrink dark:border-gray-800'
        ></span><span class='flex-none text-tertiary'>Subscribe</span>
      </a><a
        target='_blank'
        rel='noopener noreferrer'
        href='/github'
        class='flex items-center space-x-4 group'
        ><strong
          class='flex-none font-medium text-gray-1000 group-hover:text-blue-600 group-hover:underline dark:text-gray-100 dark:group-hover:text-blue-500'
          >GitHub</strong
        ><span
          class='w-full border-t border-gray-300 border-dashed shrink dark:border-gray-800'
        ></span><span class='flex-none text-tertiary'>Follow</span>
      </a><a
        target='_blank'
        rel='noopener noreferrer'
        href='/figma'
        class='flex items-center space-x-4 group'
        ><strong
          class='flex-none font-medium text-gray-1000 group-hover:text-blue-600 group-hover:underline dark:text-gray-100 dark:group-hover:text-blue-500'
          >Figma</strong
        ><span
          class='w-full border-t border-gray-300 border-dashed shrink dark:border-gray-800'
        ></span><span class='flex-none text-tertiary'>Follow</span>
      </a>
    </div>
  </div>
</section>

---
import type { Frontmatter } from '@/types'

const { slug, title, description, minutesRead } = Astro.props as Frontmatter
---

<a
  rel='prefetch'
  href={`/**/${slug}`}
  class='flex flex-col mb-4 w-full p-2 sm:p-4 border border-grey-200 dark:border-gray-800 rounded hover:bg-gray-200 dark:hover:bg-gray-800 transition-colors duration-300'
>
  <span class='flex justify-between items-center mb-1'>
    <h3 class='mb-1 text-lg md:text-xl font-semibold text-gray-900 dark:text-gray-100'>{title}</h3>
    <span class='shrink-0 text-gray-600 dark:text-gray-400 font-normal'>{minutesRead}</span>
  </span>
  <p class='line-clamp-2 text-gray-600 dark:text-gray-400 font-normal'>{description}</p>
</a>

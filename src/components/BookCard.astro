---
import type { Frontmatter } from '@/types'

export interface Props {
  title: string;
  img: string;
  author: string;
  url: string;
}
const { title, img, author, url } = Astro.props as Props;
---
<a
  class='flex space-x-3 border-b border-gray-100 py-3 px-3.5 text-sm dark:border-gray-900 lg:rounded-lg lg:border-none lg:py-2 sm:hover:bg-gray-200 sm:dark:hover:bg-gray-800'
  href={`/books`}
  ><div class='flex flex-col justify-center space-y-1'>
    <div class='font-medium line-clamp-3 text-black dark:text-gray-100'>
      {title}
    </div>
    <time class='line-clamp-1 text-black text-opacity-50 dark:text-white dark:text-opacity-50'>
      {author}
    </time>
  </div>
</a>


---
import { format } from 'date-fns';

const builtAt: Date = new Date();
const builtAtFormatted = format(builtAt, 'dd MMMM, yyyy');
---

<section class="hidden md:flex flex-wrap flex-shrink-0 max-w-full mt-0">

  <div class="max-w-full relative inline-block">Last update on {builtAtFormatted} <a
      class="border-b" href="https://github.com/manuelfessen" target="_blank">
      @Github</a>
  </div>
</section>
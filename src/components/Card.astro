---
import dayjs from 'dayjs'

export interface Props {
  post: any;
}

const { post } = Astro.props;


const wpm = 200; // Slightly less than average
const wordCount = post.rawContent().split(/(s+)/).length;
const minutes = Math.max(1, Math.floor(wordCount / wpm));
---

<a href={post.url}
  class="transition-all duration-75 ease-in-out h-full block relative top-0 hover:-top-2 shadow-lg hover:shadow-xl rounded-xl overflow-hidden"
  data-test="article-card"
>

  <img src={post.frontmatter.hero} alt={post.frontmatter.title} width="360" height="192">
  <div class="py-6 px-8">
    <h2 class="font-bold text-2xl leading-tight">
      {post.frontmatter.title}
    </h2>
    <p class="text-xs text-gray-600 mt-4 flex items-center">
      {dayjs(post.frontmatter.date).format('DD.MM.YYYY')} Â· {minutes} read
    </p>
  </div>
</a>
---
import type { Frontmatter } from '@/types'

const { slug, title, description } = Astro.props as Frontmatter
---

<a
  href={`/notes/${slug}`}
  class='inline-flex flex-col w-full h-full m-2 p-4 sm:p-4 border border-grey-200 dark:border-gray-800 rounded hover:bg-gray-200 dark:hover:bg-gray-800 transition-colors duration-300'
>
  <h3 class='mb-1 text-lg md:text-xl text-gray-900 dark:text-gray-100'>
    {title}
  </h3>
  <p class='text-gray-600 dark:text-gray-400 font-normal'>{description}</p>
</a>





---
import type { Frontmatter } from '@/types'
const { slug, title, description, minutesRead } = Astro.props as Frontmatter
---

<a
  rel='noopener noreferrer'
  href={`/blog/${slug}`}
  class='group flex items-center space-x-4 col-span-10'
>
  <strong
    class='flex-auto font-medium group-hover:text-blue-600 group-hover:underline dark:text-gray-100 dark:group-hover:text-blue-500'
  >
    {title}
  </strong>
  <span class='flex-none font-mono text-gray-700 dark:text-gray-300 tracking-tight'>
    {minutesRead}
  </span>
</a>

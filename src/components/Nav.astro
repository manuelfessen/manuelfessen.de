---
import ThemeToggle from './ThemeToggle.astro'
import { cx } from '@/lib/utils'

const items = [
  { name: 'Home', url: '/' },
  { name: 'Blog', url: '/blog/' },
  { name: 'Notes', url: '/notes/' },
]
---

<nav
  class='mx-auto flex w-full max-w-2xl items-center align-middle justify-between border-gray-200 py-4 text-gray-900 dark:border-gray-700 dark:text-gray-100 sm:py-8 sm:pb-16'
>
  <div class='ml-[-0.60rem]'>
    {
      items.map(({ name, url }) => (
        <a
          href={url}
          class={cx(
            'inline-block rounded-lg px-3 py-2 transition-colors hover:bg-gray-200 dark:hover:bg-gray-800',
            Astro.url.pathname.split('/')[1] === url.replaceAll('/', '')
              ? 'font-bold text-gray-800 dark:text-gray-200'
              : 'text-gray-500 dark:text-gray-300'
          )}
          {...(url.startsWith('http') ? { rel: 'noopener noreferrer' } : { rel: 'prefetch' })}
        >
          {name}
        </a>
      ))
    }
  </div>
  <a href='../contact'>
    <button class="relative inline-flex items-center align-middle justify-center p-0.5  overflow-hidden text-sm font-medium text-gray-900 rounded-lg group bg-gradient-to-br from-purple-600 to-blue-500 group-hover:from-purple-600 group-hover:to-blue-500 hover:text-white dark:text-white focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800">
      <span class="relative px-5 py-2.5 transition-all ease-in duration-75 bg-white dark:bg-gray-900 rounded-md group-hover:bg-opacity-0">
          Contact Me
      </span>
    </button>
  </a>
</nav>

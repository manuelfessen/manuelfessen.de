---
import dayjs from 'dayjs'
import readingTime from 'reading-time'

const {content} = Astro.props;
const {title, description, date, keywords} = content;

const reading = readingTime(content.astro.source)


---

<div class="flex justify-between mb-4 mt-16 text-xs no-decoration">
  <a href="/" class="">← Return home</a>
  <span class="">{keywords}</span> 
</div>


<article class="space-y-1 prose md:prose-xl">

  <!-- Headline -->
  <h1 class="font-medium leading-tight text-3xl -pb-16">{title}</h1>

  <!-- Date -->
  <p class="font-light text-xs">Posted on {dayjs(date).format('DD.MM.YYYY')} · 📖 {reading.text}ing time</p>

  <div class="divider"></div>
</article>
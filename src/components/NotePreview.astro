---
import type { IElement, MDXInstance, Post } from "@/types";
import { getLocaleTime } from "@/util";

export interface Props extends IElement {
	post: MDXInstance<Post>;
	withDesc?: boolean;
}

const { post, as: Element = "div", withDesc = false } = Astro.props as Props;
const { publishDate, reading } = post.frontmatter;
const date = new Date(publishDate);
const datetime = date.toISOString();
const postDate = getLocaleTime(date, { month: "short" });
---

<a href={post.url}>
	<div
		class="card w-full bg-base-100 border border-current transition ease-in hover:border-warning hover:border-2"
	>
		<div class="card-body">
			<h2 class="card-title font-normal">{post.frontmatter.title}</h2>
			<p class="text-left text-xs base-300">{post.frontmatter.description}</p>
		</div>
	</div>
</a>
